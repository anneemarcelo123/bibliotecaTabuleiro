<section class="container bgc-dark my-5">
        <div class="d-flex justify-content-between">
        <h1 class="text-center">Cadastro de Coleção</h1>
        <a href="/jogo"><i class="fa-solid fa-left-long fs-2 text-white"></i></a>
    </div>
    <form action="/colecao/store" method="post">
        {{!-- Campo 1: Nome --}}
        <section class="mb-2">
            <label for="nome">Nome</label>
            <input type="text" name="nome" id="nome" class="form-control"required>
        </section>

        {{!-- CAMPO 2: Especialidade E CARGO --}}
        <section class="row mb-2">
            <div class="col-md-6">
                <label for="descricao">Descrição</label>
                <input type="text" name="descricao" id="descricao" class="form-control"required>
            </div>

            <div class="col-md-6">
                <label for="categoria">Categoria</label>
                <input type="text" name="categoria" id="categoria" class="form-control"required>
            </div>
        </section>


        {{!-- CAMPO 4: BOTÃO DE CADASTRAR --}}
        <section class="mb-2 d-flex justify-content-center my-5">
            <button class="btn btn-primary py-2 px-5" type="submit">Cadastrar</button>
        </section>
    </form>
</section>